<Application x:Class="Huddle.Engine.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Huddle.Engine.ViewModel"
             mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <viewModel:ViewModelLocator x:Key="Locator" d:IsDataSource="True"  />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.xaml" />
                <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.Light.xaml"/>
                <ResourceDictionary Source="/Themes/Plain.Themes.xaml"/>
                <ResourceDictionary Source="Templates/BasicTemplates.xaml"/>
                <ResourceDictionary Source="Templates/OpenCvTemplates.xaml"/>
                <ResourceDictionary Source="Templates/SensorTemplates.xaml"/>
                <ResourceDictionary Source="Templates/NetworkTemplates.xaml"/>
                <ResourceDictionary Source="Templates/ComplexTemplates.xaml"/>
                <ResourceDictionary Source="Templates/StatisticTemplates.xaml "/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
    